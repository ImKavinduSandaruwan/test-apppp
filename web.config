<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
            </files>
        </defaultDocument>
        <rewrite>
            <rules>
                <rule name="Redirect to login if no index" stopProcessing="true">
                    <match url="^$" />
                    <action type="Redirect" url="pages/login.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
